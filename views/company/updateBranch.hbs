<div class="h3 text-center">Cập nhật thông tin chi nhánh</div>
<div class="container-fluid d-flex justify-content-center">
    {{#each this.data}}
<div class="row">
    <form method="post" action="/company/branch/update">
        <div class="mt-4">
            <div className="form-group">
                <input type="text" className="form-control" name="id" value="{{id}}" hidden>
            </div>

        </div>
        <div class="mt-4">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Mã khu vực</th>
                    <th scope="col">Tên khu vực</th>
                    <th class="text-center" scope="col">Lựa chọn</th>
                </tr>
                </thead>
                <tbody>
                {{#each ../list}}
                    <tr>
                        <th scope="row">{{MAKHUVUC}}</th>
                        <td>{{TENKHUVUC}}</td>
                        <td class="text-center">
                            <input class="form-check-input" type="radio" name="address" id="exampleRadios2" value="{{MAKHUVUC}}">
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="mt-4">
            <a href="../branch"><button type="button" className="btn btn-primary">Back</button></a>
            <button type="submit" className="btn btn-primary">Submit</button>
        </div>

    </form>
{{/each}}

</div>
</div>

