<form action="/company/contract/update" method="post">

    <div class="mt-3" hidden>
        <span hidden>Mã số thuế:</span>
        <span class="ml-5"><input type="text" name="maST" value="{{idUser}}" hidden></span>
    </div>
    <div class="mt-3" hidden>
        <span hidden>Mã hợp đồng:</span>
        <span class="ml-5"><input type="text" name="maHD" value="{{idContract}}"></span>
    </div>

<div class="mt-3">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Mã chi nhánh</th>
            <th scope="col">Địa chỉ</th>
            <th class="text-center" scope="col">Lựa chọn</th>
        </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <th scope="row">{{MACHINHANH}}</th>
                <td>{{TENKHUVUC}}</td>
                <td class="text-center">
                    <input class="form-check-input" type="radio" name="selection" id="exampleRadios2" value="{{MACHINHANH}}">
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
<div class="text-center mt-3">
    <a href="../contract"><button type="button">Back</button></a>
    <button type="submit">Submit</button>
</div>
</form>