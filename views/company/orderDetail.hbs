{{#each data}}
<div class="mt-3">
    <span>Họ tên: {{HoTen}}</span>
    <span class="ml-5">Ngày đặt: {{NgayDat}}</span>
</div>
<div class="mt-3">Địa chỉ giao hàng: {{DiaChiGiao}}</div>
<div class="mt-3"><span>Tên tài xế: {{HOTEN}}</span>
    <span class="ml-5">Biển số xe: {{BIENSOXE}}</span></div>
<div class="mt-3">
{{#if HinhThucThanhToan}}
    <span>Hình thức thanh toán: Online</span>
{{else}}
    <span>Hình thức thanh toán: Tiền mặt</span>
    {{/if}}
    <span class="ml-5">Tổng phí thanh toán: {{../total}} vnđ</span>
</div>
<div class="mt-3">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Số lượng</th>
        </tr>
        </thead>
        <tbody>
        {{#each ../listProduct}}
            <tr>
                <th scope="col">{{TENSP}}</th>
                <th scope="col">{{GIA}}</th>
                <th scope="col">{{SLSP}}</th>
            </tr>
        {{/each}}

        </tbody>
    </table>
</div>
<div class="text-center mt-3">
    <a href="../product"><button>Back</button></a>
</div>
{{/each}}