<div class="h3 text-center">Thêm sản phẩm</div>
<div class="container-fluid d-flex justify-content-center">
    <div class="row">
    <form>
        <div class="mt-3">
            <div className="form-group">
                <input type="text" className="form-control" placeholder="Nhập tên sản phẩm">
            </div>

        </div>
         <div class="mt-3">
             <div className="form-group">
                 <input type="text" className="form-control" placeholder="Nhập giá sản phẩm">
             </div>
         </div>
        <div class="mt-3">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Mã chi nhánh</th>
                    <th scope="col">Địa chỉ</th>
                    <th class="text-center" scope="col">Lựa chọn</th>
                </tr>
                </thead>
                <tbody>
                {{#each data}}
                    <tr>
                        <th scope="row">{{MaChiNhanh}}</th>
                        <td>{{DiaChi}}</td>
                        <td class="text-center">
                            <input class="form-check-input" type="checkbox" name="selection" id="exampleRadios2" value="{{MaChiNhanh}}">
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a href="../product"><button type="button" className="btn btn-primary">Back</button></a>
            <button type="submit" className="btn btn-primary">Submit</button>
        </div>

    </form>
</div>
</div>

